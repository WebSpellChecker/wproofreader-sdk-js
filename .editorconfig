# http://editorconfig.org/

root = true

[*]
indent_style = tab
tab_width = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[{node_modules,dist}/**]
indent_style = unset
tab_width = unset
indent_size = unset
charset = unset
end_of_line = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
